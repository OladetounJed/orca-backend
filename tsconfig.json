{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom"],
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "baseUrl": ".",
  "paths": {
    "@/config": ["src/config/*"],
    "@/utils/*": ["src/utils/*"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
